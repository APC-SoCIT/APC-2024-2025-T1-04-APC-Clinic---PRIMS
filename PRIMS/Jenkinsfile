pipeline {
    agent any

    environment {
        APP_CONTAINER = "laravel_app"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build Containers') {
            steps {
                sh 'docker-compose up -d --build'
            }
        }

        stage('Wait for Services') {
            steps {
                echo 'Waiting for MySQL...'
                sh '''
                until docker exec ${APP_CONTAINER} php -r "new PDO('mysql:host=mysql;dbname=laravel_test', 'sail', 'password');"; do
                    echo "Waiting for MySQL..."
                    sleep 2
                done
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh "docker exec ${APP_CONTAINER} composer install --no-interaction --prefer-dist --optimize-autoloader"
                sh "docker exec ${APP_CONTAINER} npm install"
            }
        }

        stage('Prepare Database') {
            steps {
                sh "docker exec ${APP_CONTAINER} php artisan migrate --force"
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh "docker exec ${APP_CONTAINER} php artisan test"
            }
        }

        stage('Build Frontend') {
            steps {
                sh "docker exec ${APP_CONTAINER} npm run build"
            }
        }
    }

    post {
        always {
            echo 'Shutting down containers...'
            sh 'docker-compose down'
        }
    }
}
