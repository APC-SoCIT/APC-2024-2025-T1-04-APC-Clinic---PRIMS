pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Pull the latest code from GitHub
                git branch: 'jenkins',
                    url: 'https://github.com/your-org/PRIMS.git'
            }
        }

        stage('Set up Laravel Sail') {
            steps {
                dir('PRIMS') {
                    sh 'cp .env.example .env || true'
                    sh './vendor/bin/sail up -d'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('PRIMS') {
                    sh './vendor/bin/sail exec laravel.test php artisan test'
                }
            }
        }

        stage('Create Docker Image') {
            steps {
                dir('PRIMS') {
                    sh 'docker build -t your-dockerhub-user/prims:latest .'
                }
            }
        }

        stage('Commit Jenkinsfile') {
            steps {
                dir('PRIMS') {
                    script {
                        sh '''
                            git config user.email "jmmiyabe@student.apc.edu.ph"
                            git config user.name "jmmiyabe"
                            git add Jenkinsfile
                            git commit -m "Add Jenkinsfile" || echo "No changes to commit"
                            git push origin jenkins || echo "No changes to push"
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            dir('PRIMS') {
                sh './vendor/bin/sail down'
            }
        }
    }
}
