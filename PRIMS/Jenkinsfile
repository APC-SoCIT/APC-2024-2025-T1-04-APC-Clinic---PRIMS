pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                dir('PRIMS') {
                    bat 'composer install'
                    bat 'npm install'
                    bat 'npm run build'
                }
            }
        }

        stage('Unit Test') {
            steps {
                echo 'Running unit tests...'
                bat 'vendor\\bin\\phpunit --coverage-text'
            }
        }

        stage('Deploy To Test Env') {
            steps {
                echo 'Deploying to test environment...'
                // If you have scp in PATH (via Git Bash or PuTTY tools), you can still call it:
                bat 'scp -r . user@test-server:/var/www/test-app'
            }
        }

        stage('Integration Test') {
            steps {
                echo 'Running integration tests...'
                bat 'php artisan test --testsuite=Feature'
            }
        }

        stage('Create Docker Image') {
            steps {
                echo 'Building Docker image...'
                bat 'docker build -t prims-app:latest .'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}